@model SFA.DAS.EAS.Support.Web.Models.AccountDetailViewModel

@if (Model.Account != null)
{
    <h1 class="heading-xlarge">
        Organisations
    </h1>

    if (Model.Account.LegalEntities.Any())
    {
        <table class="responsive">
            <thead>
                <tr>
                    <th scope="col" class="">Name</th>
                    <th scope="col" class="">Address</th>
                    <th scope="col" class="">Source</th>
                    <th scope="col" class="">Agreement Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Account.LegalEntities)
                {
                    <tr>
                        <td data-label="User Name" id="Name">@item.Name</td>
                        <td data-label="User Status" id="Status">@item.Address</td>
                        <td data-label="User Role" id="Role">@item.Source</td>
                        <td data-label="User Role" id="Role">@item.AgreementStatus</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Organisations found</p>
    }
}
else
{
    <p>Account not found</p>
}